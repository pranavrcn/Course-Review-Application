<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.LoginController"
            prefHeight="720.0" prefWidth="1280.0">
    <VBox alignment="TOP_LEFT" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="600.0" AnchorPane.rightAnchor="0.0" AnchorPane.leftAnchor="0.0"
        fx:id="bannerPane">
        <Label fx:id="welcomeLabel" alignment="TOP_LEFT" text="Welcome to Your Course Review Platform, Please Log In">
        </Label>
    </VBox>
    <VBox alignment="CENTER" spacing="10"
        AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="30.0"
        AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0">
        <Label fx:id="login" text="Log In"/>
        <Label fx:id="username" text="Username:"/>
        <TextField fx:id="loginUsernameField"/>

        <Label fx:id="password" text="Password:"/>
        <PasswordField fx:id="loginPasswordField" prefWidth="100.0"/>

        <Button text="Log In" onAction="#login"/>
        <Label fx:id="loginErrorMessageLabel" textFill="RED"/>
        <Label text="Don't have an Account?"/>
        <Button text="Create Account" onAction="#redirectToRegistration"/>
    </VBox>
</AnchorPane>
